{
  "name": "windtoday-app",
  "description": "Intelligent water sport marketplace",
  "homepage": "https://windtoday.co",
  "version": "3.0.0",
  "main": "index.js",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/windtoday/windtoday-app.git"
  },
  "bugs": {
    "url": "git+https://github.com/windtoday/windtoday-app.git"
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "windsurf",
    "windsurfing"
  ],
  "dependencies": {
    "algoliasearch": "3",
    "autoprefixer": "9",
    "babel-plugin-module-resolver": "~3.1.1",
    "babel-plugin-styled-components": "1",
    "babel-plugin-transform-define": "1",
    "babel-plugin-wrap-in-js": "1",
    "breakpoint-sass": "~2.7.1",
    "colour-me-life": "~2.0.0",
    "config": "~2.0.1",
    "cssnano": "~4.1.7",
    "glob": "~7.1.3",
    "js-yaml": "~3.12.0",
    "next": "7",
    "node-sass": "4",
    "normalize.css": "~8.0.0",
    "nprogress": "~0.2.0",
    "palx": "~1.0.3",
    "postcss-easy-import": "~3.0.0",
    "postcss-focus": "~4.0.0",
    "postcss-loader": "~3.0.0",
    "progress-arc-component": "~2.6.0",
    "prop-types": "15",
    "qs": "6",
    "raw-loader": "~0.5.1",
    "react": "16",
    "react-dom": "16",
    "react-feather": "~1.1.4",
    "react-headroom": "~2.2.4",
    "react-infinite-scroll-component": "3",
    "react-instantsearch": "~6.12.0",
    "react-progress-bar.js": "~0.2.3",
    "react-timeago": "~4.1.9",
    "rebass": "2",
    "sass-loader": "~7.1.0",
    "styled-components": "3",
    "styled-system": "3"
  },
  "devDependencies": {
    "babel-eslint": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "stylelint": "latest",
    "stylelint-config-standard": "latest"
  },
  "engines": {
    "node": "8"
  },
  "files": [
    "components",
    "config",
    "env.config.js",
    "next.config.js",
    "pages",
    "static",
    "util"
  ],
  "scripts": {
    "build": "NODE_ENV=production next build",
    "clean": "rm -rf node_modules && rm -rf .next",
    "dev": "next",
    "heroku-postbuild": "npm run build",
    "lint": "standard-markdown && standard",
    "predev": "rm -rf node_modules/.cache/babel-loader",
    "pretty": "prettier-standard --single-quote {util,pages,config,components}/**/*.js",
    "start": "NODE_ENV=production node server.js",
    "test": "exit 0"
  },
  "private": true,
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "finepack",
      "git add"
    ],
    "*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "React"
    ],
    "parser": "babel-eslint"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        {
          "ignoreAtRules": [
            "include"
          ]
        },
        true
      ]
    }
  }
}
